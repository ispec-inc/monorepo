{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/axios",
      "@nuxtjs/auth",
      "@types/jest"
    ]
  },
  "files": ["index.d.ts"],
  "include": ["~/apollo/*.gql", "~/apollo/**/*.gql"],
  "exclude": ["node_modules", ".nuxt", "dist", "cypress/**/*.js", "*.js"]
}
