{
  "name": "@monorepo/next-apollo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:graphql": "yarn ggen --watch",
    "dev:next": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "run-p lint:*",
    "lint:ts": "eslint --ext .tsx --ext .ts --ignore-path .gitignore .",
    "lint:style": "stylelint **/*.{ts,tsx,css} --ignore-path .gitignore",
    "hygen": "hygen",
    "ggen": "graphql-codegen --config codegen.yml",
    "unocss": "unocss \"./**/*.tsx\""
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --max-warnings=0 --ext .tsx --ext .ts --fix",
    "*.{css,tsx,ts}": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@unocss/webpack": "^0.30.7",
    "next": "^12.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.49.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.4.8",
    "@graphql-codegen/typescript-operations": "2.3.5",
    "@graphql-codegen/typescript-react-apollo": "3.2.11",
    "@types/node": "^17.0.13",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "5.20.0",
    "@typescript-eslint/parser": "5.20.0",
    "@unocss/webpack": "^0.30.7",
    "eslint": "8.8.0",
    "eslint-config-next": "12.0.9",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-typescript-sort-keys": "^2.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "typescript": "^4.5.5",
    "unocss": "^0.30.7",
    "windicss": "^3.5.1"
  }
}
