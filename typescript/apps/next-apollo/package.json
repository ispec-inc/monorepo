{
  "name": "@monorepo/next-apollo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:graphql": "yarn ggen --watch",
    "dev:next": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "run-p lint:*",
    "lint:ts": "eslint --ext .tsx --ext .ts --ignore-path .gitignore .",
    "lint:style": "stylelint **/*.{ts,tsx,css} --ignore-path .gitignore",
    "hygen": "hygen",
    "ggen": "graphql-codegen --config codegen.yml",
    "unocss": "unocss \"./**/*.tsx\""
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --max-warnings=0 --ext .tsx --ext .ts --fix",
    "*.{css,tsx,ts}": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@unocss/webpack": "0.30.13",
    "graphql-tag": "^2.12.6",
    "install": "0.13.0",
    "next": "12.2.5",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sass": "1.53.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.4.8",
    "@graphql-codegen/typescript-operations": "2.3.5",
    "@graphql-codegen/typescript-react-apollo": "3.2.11",
    "@types/graphql": "14.5.0",
    "@types/node": "17.0.45",
    "@types/react": "17.0.48",
    "@types/react-dom": "17.0.17",
    "@typescript-eslint/eslint-plugin": "5.21.0",
    "@typescript-eslint/parser": "5.21.0",
    "@unocss/webpack": "0.30.13",
    "eslint": "8.8.0",
    "eslint-config-next": "12.0.9",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-typescript-sort-keys": "2.1.0",
    "husky": "7.0.4",
    "hygen": "6.2.8",
    "lint-staged": "12.5.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "typescript": "4.7.4",
    "unocss": "0.30.13",
    "windicss": "3.5.6"
  }
}
